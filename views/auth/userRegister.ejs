<div class="container">
    <h1 class="text-center">Register</h1>
    
    
    <div class="d-flex justify-content-center">
    
        <div class="p-3 my-5 mb-5 card" style="max-width: 600px; margin-bottom: 500px;">
            <div class="form-signup w-100 m-auto card-body">
                <form action="/register" method="POST">
                    <% if(typeof alert !='undefined' ) { %>
                        <% alert.forEach(function(error) { %>
                            <div class="alert alert-warning alert-dismissible fade show" role="alert">
                                    <%= error.msg %>
                                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                            </div>
                        <% }) %>
                    <% } %>
                    <% if(typeof message !='undefined' ) { %>
                        <div class="alert alert-success alert-dismissible fade show" role="alert">
                            <%= message %>
                            <button type="button" class="btn-close" data-bs-dismiss="alert"aria-label="Close"></button>
                        </div>
                    <% } %>
                    <% if(typeof errorMessage !='undefined' ) { %>
                        <% errorMessage.forEach(function(error) { %>
                        <div class="alert alert-warning alert-dismissible fade show" role="alert">
                            <%= error %>
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        </div>
                        <% }) %>
                    <% } %>
                
                    <img class="my-4"
                        src="https://getbootstrap.com/docs/5.3/assets/brand/bootstrap-logo.svg"
                        alt="" width="72" height="57">
                    <h2 class="h3 mb-3 fw-normal">Register for free!!</h2>
                    
                    <hr/>

                    <div class="form-outline my-2">
                        <label class="form-label" for="form3Example1n">Username</label>
                        <input name="username" type="text" id="form3Example1n"
                            class="form-control form-control-lg"
                            placeholder="username" required
                        />
                    </div>
                    <div class="row mt-2">
                        <div class="col-md-6 mb-2">
                            <div class="form-outline">
                                <label class="form-label" for="form3Example1m">First Name</label>
                                <input name="firstName" type="text" id="form3Example1m"
                                    class="form-control form-control-lg"
                                    placeholder="John" required
                                />
                            </div>
                        </div>
                        <div class="col-md-6 mb-2">
                            <div class="form-outline">
                                <label class="form-label" for="form3Example1n">Last Name</label>
                                <input name="lastName" type="text" id="form3Example1n"
                                    class="form-control form-control-lg"
                                    placeholder="Doe" required
                                />
                            </div>
                        </div>
                    </div>
                    <div class="form-outline mb-2">
                        <label class="form-label" for="form3Example1m">Email</label>
                        <input name="email" type="email" id="form3Example1m"
                            class="form-control form-control-lg"
                            placeholder="example@email.com" required
                        />
                    </div>
                    <div class="form-outline mb-2">
                        <label class="form-label" for="form3Example1m">Phone</label>
                        <input name="phone" type="tel" id="form3Example1m"
                            class="form-control form-control-lg"
                            placeholder="12345 67890" required 
                        />
                    </div>
                    <div class="form-outline mb-2">
                        <label class="form-label" for="form3Example1m">Password</label>
                        <input name="pwd" type="password" id="form3Example1m"
                            class="form-control form-control-lg"
                            placeholder="" required
                        />
                    </div>
                    <div class="form-outline mb-2">
                        <label class="form-label" for="form3Example1m">Password Confirmation</label>
                        <input name="pwdConf" type="password" id="form3Example1m"
                            class="form-control form-control-lg"
                            placeholder="" required
                        />
                    </div>
                    
                    <div class="d-flex justify-content-center mt-5 mb-3">
                        <button class="btn btn-primary w-75 m-auto p-2 fw-bold"
                            type="submit">
                            Register
                        </button>
                    </div>
    
                </form>
            </div>
        </div>
    </div>
</div>