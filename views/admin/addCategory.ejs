<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
    <h1 class="h2">
        <%= locals.title ? locals.title : 'Dashboard' %>
    </h1>
    <div class="btn-toolbar mb-2 mb-md-0">
        <div class="btn-group mr-2">
            <a href="/category/add-category">
                <button type="button" class="btn btn-sm btn-outline-primary">Add Category</button>
            </a>
            <button type="button" class="btn btn-sm btn-outline-secondary">Share</button>
            <button type="button" class="btn btn-sm btn-outline-secondary">Export</button>
        </div>
        <button type="button" class="btn btn-sm btn-outline-secondary dropdown-toggle">
            <span data-feather="calendar"></span>
            This week
        </button>
    </div>
</div>

<div class="container">
    <div class="card container">
        <form action="/admin/category/add-category" method="POST" class="card-body" enctype="multipart/form-data">
            <fieldset>
                <legend>Add Category</legend>

                <div class="mb-3">
                    <label for="images">Category Image</label>
                    <input type="file" name="image" id="images">
                </div>
                <div class="mb-3">
                    <label for="name">Category Name</label>
                    <input type="text" name="name" id="name">
                </div>

                <button class="btn btn-primary" type="submit">Add</button>
            </fieldset>
        </form>
    </div>
</div>