<div class="container">

  <table class="table table-striped">
    <thead>
      <tr>
        <th scope="col">#</th>
        <th scope="col">Name</th>
        <th scope="col">Image</th>
        <th scope="col">Status</th>
        <th scope="col" class="text-center" >List/Unlist</th>
        <th scope="col" class="text-center" >Actions</th>
      </tr>
    </thead>
    <tbody>

      <% categories.forEach((category,index) => { %>
       <tr class="align-middle">
          <td><%= index+1 %> </td>
          <td><%= category.name %> </td>
          <td> 
            <img height="50px" width="50px" src="/uploads/category-images/<%= category.image %>" alt="" class="img-fluid">
          </td>
          <td>
            <% if (category.status) { %>
             listed
             <% } else { %>
              unlisted
            <% } %>
          </td>
          <td class="text-center">
            <div class="d-flex flex-row justify-content-center">
              <% if (category.status) { %>
                <button class="btn btn-danger btn-sm"><i class="bi bi-slash-circle-fill"></i> Unlist</button>
                <% } else { %>
                 <button class="btn btn-success btn-sm"><i class="bi bi-check-circle-fill"></i> List</button>
               <% } %>
            </div>
          </td>
          <td class="text-center">
            <div class="d-flex flex-row justify-content-center">
              <button class="btn btn-primary btn-sm"><i class="bi bi-eye"></i></button>
              <button class="btn btn-warning btn-sm"><i class="bi bi-pencil-square"></i></button>
              <form action="/admin/category/delete-category/<%= category._id%>?_method=DELETE" method="POST" class="position relative">
                <button class="btn btn-danger btn-sm mx-1">
                    <i class="bi bi-trash"></i>
                </button>
            </form>
            </div>
          </td>
       </tr>
      <% }) %>

  </tbody>
  </table>
</div>