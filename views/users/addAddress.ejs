<div class="container my-5">
    <h2 class="text-center">
        Add Address
    </h2>
    <div class="container my-5">
        <div class="card container" style="max-width: 600px;">
            <form action="/user/add-address" class="card-body" method="POST">

                <div class="form-group row">
                    <div class="col-md-6">
                        <label for="c_fname" class="text-black">First Name <span class="text-danger">*</span></label>
                        <input name="firstName" type="text" class="form-control" id="c_fname">
                    </div>
                    <div class="col-md-6">
                        <label for="c_lname" class="text-black">Last Name <span class="text-danger">*</span></label>
                        <input name="lastName" type="text" class="form-control" id="c_lname">
                    </div>
                </div>

                <div class="form-group">
                    <label for="mobile" class="text-black">Phone Number<span class="text-danger">*</span></label>
                    <input type="text" class="form-control" id="mobile" name="mobile">
                </div>

                <div class="form-group">
                    <label for="address1" class="text-black">Address Line 1<span class="text-danger">*</span></label>
                    <br>
                    <textarea name="address1" class="form-control" id="address1" cols="46" rows="3"></textarea>
                </div>
                <div class="form-group">
                    <label for="address2" class="text-black">Address Line 2<span class="text-danger">*</span></label>
                    <br>
                    <textarea name="address2" class="form-control" id="address2" cols="46" rows="3"></textarea>
                </div>

                <div class="form-group row mb-5">

                    <div class="col-md-3">
                        <label for="state" class="text-black">State<span class="text-danger">*</span></label>
                        <input type="text" class="form-control" id="state" name="state">
                    </div>
                    <div class="col-md-3">
                        <label for="landmark" class="text-black">Landmark<span class="text-danger">*</span></label>
                        <input type="text" class="form-control" id="landmark" name="landmark">
                    </div>
                </div>
                <div class="form-group row mb-5">
                    <div class="col-md-3">
                        <label for="street" class="text-black">Street<span class="text-danger">*</span></label>
                        <input type="text" class="form-control" id="street" name="street">
                    </div>
                    
                    <div class="col-md-3">
                        <label for="city" class="text-black">City<span class="text-danger">*</span></label>
                        <input type="text" class="form-control" id="city" name="city">
                    </div>

                    <div class="col-md-3">
                        <label for="country" class="text-black">Country<span class="text-danger">*</span></label>
                        <input type="text" class="form-control" id="country" name="country">
                    </div>
                </div>

                <div class="form-group">
                    <label for="c_diff_postal_zip" class="text-black">Postal / Zip Code<span
                            class="text-danger">*</span></label>
                    <input type="text" class="form-control" id="c_diff_postal_zip" name="zipcode">
                </div>

                <div class="md-3">
                    <button type="submit" class="btn btn-success">Add Address</button>
                </div>

            </form>
        </div>
    </div>
</div>